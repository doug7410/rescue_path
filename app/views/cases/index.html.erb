  <div class="col-md-4 column">
    <img alt="140x140" src="<%= c.person.image_url %>" class="img-circle"> <span class="label label-danger">MISSING</span>
    <h2>
      <%= c.person.first_name %> <%= c.person.last_name %>
    </h2>
    <p>
      <%= c.notes %>
    </p>
    <p>
      <a class="btn" href="#">Read Case Â»</a>
    </p>
    <div class="panel panel-default">
      <div class="panel-heading">
